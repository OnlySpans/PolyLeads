{
  "Serilog": {
    "MinimumLevel": "Information",
    "Using": [
      "Serilog.Exceptions"
    ],
    "Enrich": [
      "FromLogContext",
      "WithSpan",
      "WithExceptionDetails"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {TraceId}.{SpanId}.{ParentId} {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
